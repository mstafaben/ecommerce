@model IEnumerable<CartItemWithDetailsServiceModel>
@{
    ViewData["Title"] = "Home Page";
}

@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35  isotope-item women">
        <!-- Block2 -->
        <div class="block2">
            <div class="block2-pic hov-img0">
                <a class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6"
                   asp-controller="Product" asp-action=@nameof(ProductController.Details)
                   asp-route-id=@product.Id>
                    <img src=@product.ImageUrl alt=@product.Description width="287" height="175" asp-append-version="true" />
                </a>
            </div>
            <div class="block2-txt flex-w flex-t p-t-14">
                <div class="block2-txt-child1 flex-col-l ">
                    <a class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6"
                       asp-controller="Product" asp-action=@nameof(ProductController.Details)
                       asp-route-id=@product.Id>
                        <h3>@product.Description</h3>
                    </a>
                    <span class="stext-101 m-t-4">
                        Vendeur : @product.Vendor
                    </span>
                    <span class="stext-108">
                        Département: @product.DepartmentDescription
                    </span>
                    <div class="stext-109">
                        <a asp-area="" asp-controller="ShoppingCart" asp-action=@nameof(ShoppingCartController.AddToCart)
                           asp-route-productId=@product.Id
                           class="btn btn-default  btn-sm m-t-9"><span class="glyphicon glyphicon-shopping-cart"> </span>  </a>
                    </div>
                </div>
                <div class="block2-txt-child2 flex-r p-t-3">
                    <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                        <img class="icon-heart1 dis-block trans-04" src="~/images/icons/icon-heart-01.png" alt="ICON">
                        <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/images/icons/icon-heart-02.png" alt="ICON">
                    </a>
                </div>
            </div>
        </div>
    </div>
}